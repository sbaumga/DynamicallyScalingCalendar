<UserControl x:Class="KinectCalendar.Day"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KinectCalendar"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Border Name="Border" Background="Black" BorderThickness="1">
        <Canvas Name="Container" Height="58" Width="58" Background="Blue">
            <TextBlock Name="DayNum" Text="0" FontSize="20" Foreground="White"></TextBlock>
            <Ellipse Name="DayMarker" Width="20" Height="20" Fill="Red" Canvas.Left="20" Canvas.Top="30" Visibility="Collapsed"></Ellipse>
            <ListView x:Name="EventsBox" Height="34" Canvas.Top="24" Width="58"/>
        </Canvas>
    </Border>
</UserControl>
